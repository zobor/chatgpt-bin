root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{ts,tsx,json,js,jsx,html,css,yml,scss}]
indent_style = space
indent_size = 2

[.eslintrc]
indent_style = space
indent_size = 2

[*.{js,ts,tsx,jsx}]
quote_type = single

[*.md]
trim_trailing_whitespace = false
